{
    "name": "learning-app",
    "version": "1.0.1",
    "description": "A simple twelve-factor app for learning purposes",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "node app.js",
        "start:all-in-one": "APP_MODE=all-in-one node app.js",
        "start:frontend": "APP_MODE=frontend API_BASE_URL=${API_BASE_URL:-http://localhost:3000} node app.js",
        "start:api": "APP_MODE=api node app.js",
        "test": "jest",
        "test:sqlite": "TEST_SQLITE=true jest",
        "test:mysql": "TEST_MYSQL=true jest",
        "test:postgresql": "TEST_POSTGRESQL=true jest",
        "test:all": "TEST_SQLITE=true TEST_MYSQL=true TEST_POSTGRESQL=true jest"
    },
    "dependencies": {
        "axios": "^1.12.2",
        "ejs": "^3.1.10",
        "express": "^4.18.2",
        "mysql2": "^3.14.3",
        "pg": "^8.13.1",
        "prom-client": "^15.1.0",
        "sequelize": "^6.37.5",
        "sqlite3": "^5.1.7",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    },
    "keywords": [
        "twelve-factor",
        "learning",
        "container",
        "demo"
    ],
    "author": "TSC Labs",
    "license": "Apache-2.0"
}
